<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="whisnet_irc_bot.parser" class="%whisnet_irc_bot.parser_class%">
            <argument>%whisnet_irc_bot.command_prefix%</argument>
        </service>

        <service id="whisnet_irc_bot.irc" class="%whisnet_irc_bot.irc_class%">
            <argument>%whisnet_irc_bot.user%</argument>
            <argument>%whisnet_irc_bot.join_channel%</argument>
        </service>

        <service id="whisnet_irc_bot.ping_listener" class="Whisnet\IrcBotBundle\EventListener\PingListener">
            <tag name="kernel.event_listener" event="whisnet_irc_bot.command" method="onCommand" />
        </service>

        <service id="whisnet_irc_bot.help_listener" class="Whisnet\IrcBotBundle\EventListener\HelpListener">
            <tag name="kernel.event_listener" event="whisnet_irc_bot.command" method="onCommand" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="whisnet_irc_bot.datetime_listener" class="Whisnet\IrcBotBundle\EventListener\DateTimeListener">
            <tag name="kernel.event_listener" event="whisnet_irc_bot.command" method="onCommand" />
        </service>
    </services>

</container>
